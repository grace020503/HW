#include <stdio.h>

int main()
{
    char *name = "Kim sieun";
    char *id = "2021053007";

    char charType;
    int integerType;
    float floatType;
    double doubleType; //변수 선언

    printf("----- [%s] [%s] -----\n", name, id); //이름, 학번 출력

    printf("Size of char: %ld byte\n", sizeof(charType));
    printf("Size of int: %ld byte\n", sizeof(integerType));
    printf("Size of float: %ld byte\n", sizeof(floatType));
    printf("Size of double: %ld byte\n", sizeof(doubleType)); //각 변수의 자료형 크기(byte)를 출력

    printf("-----------------------------------------\n");

    printf("Size of char: %ld byte\n", sizeof(char));
    printf("Size of int: %ld byte\n", sizeof(int));
    printf("Size of float: %ld byte\n", sizeof(float));
    printf("Size of double: %ld byte\n", sizeof(double)); //각 자료형의 크기(byte)를 출력

    printf("-----------------------------------------\n");

    printf("Size of char*: %ld byte\n", sizeof(char*));
    printf("Size of int*: %ld byte\n", sizeof(int*));
    printf("Size of float*: %ld byte\n", sizeof(float*));
    printf("Size of double*: %ld byte\n", sizeof(double*)); //포인터 크기(byte)를 출력

    return 0;
}
